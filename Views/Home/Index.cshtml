@model List<Practica_2.Models.UserModel>

@{
    ViewData["Title"] = "Home Page";
}

@section mainTitle{
<div class="text-center">
    <h1 class="display-4">Welcome Asshole</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
}

@section userInfo{
<div class="col-md-3">
    <div class="card">
        <div class="card-body">

        </div>
    </div>
</div>
}

<div class="col-md-6 bg-ligth">
    <div class="card mb-4">
        <h5 class="card-header">Post your adventures</h5>
        <div class="card-body">
            <form asp-controller="Home" asp-action="Save" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" id="title" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="body" class="form-label">Post Body</label>
                    <textarea name="body" id="body" class="form-control" rows="3">
                    </textarea>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary" type="submit">Upload</button>
                </div>
            </form>
        </div>
    </div>
    @{
        foreach (var user in Model)
        {
            foreach (var post in user.PostsList)
            {
                @Html.DisplayFor(Model => post)
            }
        }
    }
</div>
<div class="col-md-3">
    <div class="list-group">
        @await Component.InvokeAsync("UsersFriends")
    </div>
</div>
